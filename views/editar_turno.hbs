<h2>Editar Turno</h2>

<form action="/admin/editar/{{turno.id}}" method="POST">

    <label>Fecha:</label>
    <input type="date" name="fecha" value="{{turno.fecha}}" required>

    <br><br>

    <label>Horario:</label>
    <input type="text" name="horario" value="{{turno.horario}}" required>

    <br><br>

    <button type="submit">Actualizar</button>

</form>
